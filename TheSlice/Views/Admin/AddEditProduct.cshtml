@using TheSlice.Constants;
@using TheSlice.Models;
@model TheSlice.Models.ProductDetailsModel

<script src="@Url.Content("~/Scripts/apps/Admin.js")" type="text/javascript"></script>
<script type="text/javascript">

    var AdminUrl = {

        //ManageLeads: '@Url.Content("~/Lead/ManageLeads")',
        GetDesignations: '@Url.Content("~/Admin/GetDesignations")',
        SaveProduct: '@Url.Content("~/Admin/SaveProduct")',
        ManageProducts: '@Url.Content("~/Admin/ManageProducts")',
        Image: '@Url.Content("~/Admin/Image")'


    };
    $(document).ready(function () {
        selectmenu(2);
    });
</script>

@{
    ViewBag.Title = "Add Edit Products";
    Layout = "_SuperAdmin.cshtml";

}


<div class="col-md-12" style="padding-left: 45px !important;padding-right: 45px !important">
    @section Headertitle {
        @{
            var title = Model.Id > 0 ? "Update Product" : "Add New Product";
        }

        <h1>
            @title
        </h1>
        <div class="col-md-2 pull-right" style="margin-right: -25px;">
            <a type="button" class="btn btn-default" id="btnCancelEditLead" data-dismiss="modal" href="@Url.Action("GoBackProduct","Admin")">Cancel</a>
            <button type="button" id="saveproduct" class="btn btn-primary">Save</button>
        </div>

        <hr />
    }

    @using (Html.BeginForm("AddEditProduct", "Admin", FormMethod.Post, new { id = "FrmAEProducts" }))
    {
        <div class="panel panel-default" style="padding: 5px 5px 5px 5px;">
            <div class="panel-heading" style="margin-bottom: 5px;">
                <h4>Basic Details</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <span>Product Name</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.Name, new { verrormsg = "Product Name is required", Id = "name", @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <span>SKU</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.Sku, new { verrormsg = "Model Id or SKU is required", Id = "sku", @class = "form-control" })
                </div>
                @Html.HiddenFor(m => m.Id, new { Id = "Id" })

                <div class="col-md-4">
                    <span>Stock Availability Status</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.StockAvailability, new { verrormsg = "Stock availability status is required", Id = "stockavailability", @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <span>Price</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.Price, new { verrormsg = "Price is required and should be numeric", Id = "price", @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <span>Image Alt text</span>
                    @Html.TextBoxFor(m => m.AlternateText, new { verrormsg = "Alternate Text is required", Id = "alttext", @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <span>Image Title</span>
                    @Html.TextBoxFor(m => m.Title, new { verrormsg = "Title is required", Id = "title", @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <span>Description</span><span style="color:red"> *</span>
                    @Html.TextAreaFor(m => m.ShortDescription, new { verrormsg = "Description is required", Id = "shortdescription", @class = "form-control" })
                </div>               
            </div>
        </div>
    }

</div>

